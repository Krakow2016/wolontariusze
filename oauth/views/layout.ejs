    <style type="text/css">
      body{
        background-color:#008AC3;
        position: relative;
        position: center;
        color: #fff;
        font: 400 1.5rem/1.5rem "Open Sans", Arial;
        font-size: 15pt;
      }
      #logo p{
        text-align: center;
      }
      #logo img{
        position: absolute;
        Width: 50%;
        left: 50%;
        top: 50%;
        transform: translateX(-50%) translateY(-150%);
      }

      label{
        background-color: rgba(0, 0, 0, 0.36);
        border-radius: 25px;
        border-bottom-left-radius: 0;
        border-bottom-right-radius: 0;
        box-sizing: border-box;
        display: block;
        padding: 15px 25px;
        width: 100%;
      }

      input[type=text], input[type=password]{
        background-color: rgb(230, 241, 245);
        border-radius: 25px;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
        border: 0;
        box-sizing: border-box;
        color: black;
        margin-bottom: 10px;
        outline: 0;
        padding: 15px;
        text-indent: 10px;
        width: 100%;
      }

      input[type=submit] {
        border: 0;
        border-radius: 25px;
        background-color: rgba(0, 0, 0, 0.36);
        padding: 15px;
        width: 100%;
        color: #fff;
        font-size: 15pt;
        margin: 10px 0
      }

      #save{
        text-align: center;
        background-color: rgba(0, 0, 0, 0.36);
        padding: 15px 0;
        border-radius: 25px;
        border-bottom-right-radius: 0;
        border-bottom-left-radius: 0;
      }

      a{
        color: white;
      }

      #lower p{
        text-align: center;
      }

      h3 {
        text-align: center
      }

      .logo {
        text-align: center
      }
      .logo img {
        width: 50%;
      }
    </style>
  </head>
  <body>
    <div class="logo">
      <img src="/img/gd-01.png" />
    </div>
    <div id="panel">
      <%- body %>
    </div>
